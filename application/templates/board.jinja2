{% extends 'index.jinja2' %}

{% block css %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/board.css') }}">
{% endblock css %}

{% block body %}
  <form class="post" action="/user/post" method="post">
    {{ pf.csrf_token }}
    {{ pf.title.label }} {{ pf.title }}
    {{ pf.body.label }} {{ pf.body }}
    {{ pf.board.label }} {{ pf.board }}
    {{ pf.image.label }} {{ pf.image }}
    <button type="submit">Create Post</button>
  </form>

  <div class="posts">
    {% for post in posts %}
      <article id="{{ post.uid }}" class="post">
        <h5><a href="{{ url_for('index.post', post=post.uid) }}">
            /p/{{ post.uid }}</a></h5>
        <h2>{{ post['title'] }}</h2>
        <p>{{ post['body'] }}</p>
        <ul class="comment-section">
          {{ w.reply(cf, post.uid, post.comments) }}
        </ul>
      </article>
    {% endfor %}
  </div>
{% endblock body %}

{% block js %}
<script src="{{ url_for('static', filename='js/reply.js') }}"></script>
{% endblock js %}
